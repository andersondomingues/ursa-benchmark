TARGET   = forloop

FREEDOM_SDK_PATH=/home/ale/repos/riscv/freedom-e-sdk
SIM=qemu-system-riscv32 -nographic -machine sifive_e -kernel

app: 
	riscv64-unknown-elf-gcc -march=rv32im -mabi=ilp32 -mcmodel=medlow -ffunction-sections -fdata-sections -I$(FREEDOM_SDK_PATH)/bsp/qemu-sifive-e31/install/include --specs=nano.specs -Os -Wl,--gc-sections -Wl,-Map,$(TARGET).map -nostartfiles -nostdlib -L$(FREEDOM_SDK_PATH)/bsp/qemu-sifive-e31/install/lib/release/ -T$(FREEDOM_SDK_PATH)/bsp/qemu-sifive-e31/metal.default.lds ../../src/$(TARGET).c  -Wl,--start-group -lc -lgcc -lm -lmetal -lmetal-gloss -Wl,--end-group -o $(TARGET).elf
	
.PHONY: clean
clean:
	-rm -rf *~ *.o *.elf *.map 
	@echo "Cleanup complete!"
		
sim: app
	$(SIM) $(TARGET).elf 
